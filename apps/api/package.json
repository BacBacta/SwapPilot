{
  "name": "@swappilot/api",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs --dts --tsconfig tsconfig.build.json --out-dir dist --clean",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc -b",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@swappilot/config": "workspace:*",
    "@swappilot/shared": "workspace:*",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^5.1.0",
    "zod": "^4.1.5",
    "pino": "^9.7.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  }
}
